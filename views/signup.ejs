<script>

    function empty() {
        var x;
        x = document.getElementById("roll-input").value;
        if (x == "") {
            //alert("Please insert empty value");
            return false;
        };
    }
    // Change the type of input to password or text 
    function Toggle() {
        var temp = document.getElementById("typepass");
        if (temp.type === "password") {
            temp.type = "text";
        }
        else {
            temp.type = "password";
        }
    }

    // Change the type of input to password or text 
    function Toggle() {
        var temp = document.getElementById("typepass");
        if (temp.type === "password") {
            temp.type = "text";
        }
        else {
            temp.type = "password";
        }
    }

</script>
